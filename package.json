{
  "name": "remix-boilerplate",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "npm-run-all build:*",
    "build:scss": "sass styles/:app/styles/ --style=compressed",
    "build:remix": "remix build",
    "sass": "sass --watch app/:app/",
    "dev": "concurrently \"npm run sass\" \"cross-env NODE_ENV=development netlify dev\"",
    "start": "cross-env NODE_ENV=production netlify build"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "^1.5.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "concurrently": "^7.2.1",
    "eslint": "^8.15.0",
    "sass": "^1.52.1"
  },
  "engines": {
    "node": ">=14"
  }
}
